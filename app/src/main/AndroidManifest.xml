<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fj.mad06">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InitialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalStorageActivity"
            android:label="@string/title_activity_local_storage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExternalStorageActivity"
            android:label="@string/title_activity_external_storage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SaveLocalActivity"
            android:label="@string/title_activity_save_local"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SaveExternalActivity"
            android:label="@string/title_activity_save_external"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>